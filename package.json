{
  "name": "@biva8710/gas-sheet-driver",
  "version": "0.1.2",
  "description": "Google Apps Script bridge driver for local development, enabling seamless execution with Vite and SQLite persistence.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite-plugin.d.ts",
      "import": "./dist/vite-plugin.mjs",
      "require": "./dist/vite-plugin.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "google-apps-script",
    "gas",
    "local-development",
    "vite",
    "sqlite",
    "spreadsheet",
    "google-sheets"
  ],
  "author": "biva8710",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "esbuild": "^0.27.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/google-apps-script": "^2.0.8",
    "@types/node": "^25.2.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
